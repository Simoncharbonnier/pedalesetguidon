<div class="container">
  <h1>En attente</h1>
  <div class="container d-flex">
    <% @rentals.each do |rental| %>
      <% if rental.status == "pending" %>
        <div class="card" style="width: 18rem;">
          <%= cl_image_tag rental.bike.photo.key, height: 150, width: 170, class:"card-img p-1 pB-0" %>
          <div class="card-body">
            <p class="card-text"><%= rental.end_at %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  </div>
<hr>
