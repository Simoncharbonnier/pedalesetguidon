      <div class="bike-card d-flex">
        <div class="bike">
          <div class="bike-informations d-flex justify-content-between">
            <div class="name-image">
              <h2 class="name text-center"><%= rental.bike_name %></h2>
            </div>
            <div class="informations text-center">
              <p><%= rental.start_at %>
              <p><%= rental.end_at %>
              <p><%= "#{rental.total_price}â‚¬" %></p>

            </div>
          </div>
          <a class="btn btn-ghost" href="accept_owner_rental">Accept</a>
          <a class="btn btn-ghost" href="decline_owner_rental">Refuse</a>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
