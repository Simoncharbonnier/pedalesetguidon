<div class="container">
<h1>Rentals management</h1>

  <h1>En attente</h1>
  <div class="container d-flex">
    <% @owner_rentals.each do |owner_rental| %>
      <% if owner_rental.status == "pending" %>
        <div class="card" style="width: 18rem;">
          <%= cl_image_tag owner_rental.bike.photo.key, height: 150, width: 170, class:"card-img p-1 pB-0" %>
          <div class="card-body">
            <p class="card-text"><%= owner_rental.end_at %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  </div>
