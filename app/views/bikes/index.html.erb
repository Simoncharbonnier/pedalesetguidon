    <div class="flex-grow-1">
      <% @bikes.each do |bike| %>
      <div class="card mb-0" style="max-width: 620px;">
          <div class="row no-gutters">
          <div class="col-md-4">
          <%= cl_image_tag bike.photo.key, height: 135, width: 170, class:"card-img p-1 pB-0" %>
        </div>
          <div class="col-md-8">
              <div class="card-body">
              <h5 class="card-title"><%= bike.bike_name %></h5>
              <p class="card-text"><%= bike.category %></p>
                <p class="card-text"><small class="text-muted"><%= bike.gender %></small></p>
                <div class="d-flex justify-content-between">
                  <p class="card-text"><strong><%= bike.daily_price %>â‚¬</strong></p>
                  <%= link_to 'Read more', bike_path(bike.id), class: "btn btn-primary btn-sm" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
