<div class="container">
  <div class="bike-card d-flex">
    <div class="bike">
      <div class="bike-informations d-flex justify-content-between">
        <div class="name-image">
          <h2 class="name text-center"><%= @bike.bike_name %></h2>
          <div class="image">
            <%= cl_image_tag @bike.photo.key, width: 500, height: 350, crop: :fill %>
          </div>
        </div>
        <div class="informations text-center">
          <p><%= @bike.user.last_name + " " + @bike.user.first_name %></p>
          <p><%= "#{@bike.daily_price}â‚¬" %></p>
          <p><%= @bike.category %></p>
          <p><%= @bike.gender %></p>
        </div>
      </div>
    </div>

    <div class="form">
      <h2>Formulaire</h2>
      <div class="formulaire">
        <%= simple_form_for(@rental) do |f| %>
          <p>(options)</p>
          <%= f.input :start_at %>
          <%= f.input :end_at %>
          <% if current_user %>
            <%= link_to rentals_path do %>
              <%= f.submit "Book now!", class: "btn btn-primary" %>
            <% end %>
          <% else %>
            <%= link_to new_user_registration_path do %>
              <%= f.submit "Log in and book now!", class: "btn btn-primary" %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
